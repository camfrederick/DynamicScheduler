<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView5"
            android:text="Add Busy Time"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/cbt_setname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:ems="10"
            android:hint="Busy Time Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/cbt_setstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbt_setname"
            android:layout_alignStart="@+id/cbt_setname"
            android:layout_below="@+id/SelectStartDate"
            android:ems="10"
            android:hint="YYYY-MM-DD"
            android:inputType="date" />

        <TextView
            android:id="@+id/SelectStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbt_setstart"
            android:layout_alignStart="@+id/cbt_setstart"
            android:layout_below="@+id/cbt_setname"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Select Start Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/cbt_setend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cbt_setstart"
            android:layout_alignBottom="@+id/cbt_setstart"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:ems="10"
            android:hint="YYYY-MM-DD"
            android:inputType="date" />

        <TextView
            android:id="@+id/SelectEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/SelectStartDate"
            android:layout_alignBottom="@+id/SelectStartDate"
            android:layout_alignLeft="@+id/cbt_setend"
            android:layout_alignStart="@+id/cbt_setend"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Select End Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/cbt_setdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="YYYY-MM-DD"
            android:inputType="date"
            android:layout_below="@+id/SelectDate"
            android:layout_alignLeft="@+id/cbt_setstart"
            android:layout_alignStart="@+id/cbt_setstart" />

        <TextView
            android:id="@+id/SelectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbt_setdays"
            android:layout_alignStart="@+id/cbt_setdays"
            android:layout_below="@+id/cbt_setstart"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:text="Select Days"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textClock4"
            android:layout_alignTop="@+id/textView6"
            android:text="         " />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbt_stoptime"
            android:layout_alignStart="@+id/cbt_stoptime"
            android:layout_below="@+id/cbt_setdays"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="37dp"
            android:text="Stop"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_toStartOf="@+id/SelectEndDate"
            android:layout_toLeftOf="@+id/SelectEndDate" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cbt_stoptime"
            android:layout_alignLeft="@+id/cbt_starttime"
            android:layout_alignStart="@+id/cbt_starttime"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/cbt_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cbt_starttime"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/cbt_starttime"
            android:layout_marginBottom="45dp"
            android:text="Create Busy Time" />

        <Button
            android:id="@+id/cbt_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/cbt_setstart"
            android:layout_alignStart="@+id/cbt_setstart"
            android:layout_below="@+id/textView9"
            android:text="00:00" />

        <Button
            android:id="@+id/cbt_stoptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:text="00:00" />

    </RelativeLayout>

    <TextView
        android:id="@+id/time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>
